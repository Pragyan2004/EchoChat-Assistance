{
  "manifest_version": 3,
  "name": "Echocart Assistant",
  "version": "1.0",
  "description": "AI-powered assistant for Amazon product pages",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.in/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.amazon.in/*"
      ],
      "js": ["content.js"]
    }
  ]
}
